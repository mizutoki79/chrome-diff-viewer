{
    "compilerOptions": {
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "./dist",
        "lib": ["dom", "es5", "es2015.collection", "es2015.promise"],
        "types": ["chrome"],
        "baseUrl": "./node_modules",
        "jsx": "preserve",
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "webpack.config.js"]
}
